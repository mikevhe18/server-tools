<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="form_base_currencyAmntToText" model="ir.ui.view">
            <field name="name">Amount To Text</field>
            <field name="model">res.currency</field>
            <field name="inherit_id" ref="base.view_currency_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='rate_ids']" position="after">
                        <group col="1" string="Legend (for variables, function)">
                            <group>
                                <label colspan="4" string="Value of amount to be converted to text: currency"/>
                                <label colspan="4" string="Returned value: result"/>
                                <label colspan="4" string="Function to call the method: &lt;model res_currency&gt;.amount_to_text(value)"/>
                            </group>
                        </group>
                        <separator string="Python Definition for Method Amount To Text" colspan="2"/>
                        <field name="python_amount2text" nolabel="1"/>
                    </xpath>>
                </data>
            </field>
        </record>
    </data>
</openerp>
